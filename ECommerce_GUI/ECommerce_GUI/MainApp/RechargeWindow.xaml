<Window x:Class="ECommerce_GUI.MainApp.RechargeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ECommerce_GUI.MainApp"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="RechargeWindow (Demo)" Height="175.8" Width="548.8">
    <Grid>
        <StackPanel Margin="5">
            <TextBlock Text="Add Money" FontSize="20" FontWeight="DemiBold"/>
            <StackPanel Orientation="Horizontal">
                <TextBox Name="moneyBox" FontSize="18" KeyDown="moneyBox_KeyDown"
                     TextChanged="moneyBox_TextChanged" Width="480"/>
                <TextBlock Text="VNĐ" FontSize="18" FontWeight="DemiBold" VerticalAlignment="Bottom"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0 20 0 0">
                <Button Name="saveBtn" Content="Save" Background="#FF3AB75B"
                        Click="saveBtn_Click"/>
                <Button Name="cancelBtn" Content="Cancel" Background="#FFB7473A" Margin="10 0 0 0"
                        IsCancel="True"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
