<Window x:Class="ECommerce_GUI.MainApp.AddressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ECommerce_GUI.MainApp"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="AddressWindow" Height="169.957" Width="515.632">
    <Grid>
        <StackPanel Margin="5">
            <TextBlock Text="Address" FontSize="20" FontWeight="DemiBold"/>
            <TextBox Name="addressBox" FontSize="18"/>
            <StackPanel Orientation="Horizontal" Margin="0 20 0 0">
                <Button Name="saveBtn" Content="Save" Background="#FF3AB75B"
                        Click="saveBtn_Click"/>
                <Button Name="cancelBtn" Content="Cancel" Background="#FFB7473A" Margin="10 0 0 0"
                        IsCancel="True"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
