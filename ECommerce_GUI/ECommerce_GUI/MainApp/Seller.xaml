                                    <Button Style="{StaticResource stylebtnMenu}" Content="Tất cả sản phẩm"/>
                                    <Button Style="{StaticResource stylebtnMenu}" Content="Thêm sản phẩm"/>
                                </StackPanel>
                            </Expander>
                            <Expander
                        HorizontalAlignment="Stretch"
                        Header="Thiết lập shop" 
                        Foreground="DarkSlateGray"
                        IsExpanded="True"
                        FontWeight="Bold"
                        Background="Transparent">
                                <StackPanel
                            Orientation="Vertical"
                            TextBlock.Foreground="{DynamicResource MaterialDesignBody}">
