<UserControl x:Class="ECommerce_GUI.MainApp.Product.ProductMain"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ECommerce_GUI.MainApp.Product"
             mc:Ignorable="d" 
             d:DesignHeight="666" d:DesignWidth="1150"
             Background="WhiteSmoke">
    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Disabled"
                      VerticalScrollBarVisibility="Hidden">
            <StackPanel>
                <TextBlock Text="Top Selling Products" Margin="10 10 10 0"
                        FontSize="25" FontWeight="Bold" Background="White"/>
                <WrapPanel Height="auto" Margin="10 0 10 10" MinHeight="100" Background="White"
                       Name="topSellingProductPanel">
                </WrapPanel>

                <TextBlock Text="All Products" Margin="10 10 10 0"
                        FontSize="25" FontWeight="Bold" Background="White"/>
                <WrapPanel Height="auto" Margin="10 0 10 10" MinHeight="100" Background="White"
                       Name="allProductPanel">
                </WrapPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
