<UserControl x:Class="ECommerce_GUI.MainApp.Product.DisplayProduct"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ECommerce_GUI.MainApp.Product"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="200"
             Width="200" Height="300"
             Background="White"
             Cursor="Hand"
             MouseDoubleClick="UserControl_MouseDoubleClick">
    <Grid>
        <StackPanel>
            <Rectangle Height="180">
                <Rectangle.Fill>
                    <ImageBrush x:Name="productMainUrl" />
                </Rectangle.Fill>
            </Rectangle>
            <TextBlock Name="productName" MaxHeight="60"
                        Height="auto"
                        FontWeight="SemiBold"
                        TextDecorations="Underline"
                        TextWrapping="Wrap"
                        Text="Súng Lục Glock97"/>
            <TextBlock Name="productPrice" Text="123.456 VNĐ" Foreground="Red" FontSize="18"/>
            <TextBlock Name="productTotalSale" Text="Sold 123" FontSize="11"/>
            
        </StackPanel>
        <Canvas Margin="10 298 10 0" Background="Black"/>
    </Grid>
</UserControl>
